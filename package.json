{
  "name": "@raypatterson/sws-config",
  "description": "A static web site configuration.",
  "version": "0.0.0-1",
  "author": {
    "name": "Ray Patterson",
    "email": "github.raypatterson@gmail.com"
  },
  "bugs": "https://github.com/raypatterson/sws-config/issues",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "contributors": [
    {
      "name": "Ray Patterson",
      "email": "github.raypatterson@gmail.com"
    }
  ],
  "dependencies": {
    "@raypatterson/passthough-loader": "github:raypatterson/passthough-loader",
    "deep-freeze": "0.0.1",
    "findup-sync": "^0.4.2",
    "fs-jetpack": "^0.9.2",
    "lodash": "^4.15.0",
    "pkg-up": "^1.0.0",
    "req-all": "^0.1.0",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "blue-tape": "^0.2.0",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "faucet": "0.0.1",
    "fixpack": "^2.3.1",
    "ghooks": "^1.3.2",
    "linkr": "^0.1.0",
    "updtr": "^0.2.1",
    "xo": "^0.16.0"
  },
  "engines": {
    "node": ">=6.1.0",
    "npm": ">=3.10.0"
  },
  "homepage": "https://github.com/raypatterson/sws-config",
  "keywords": [
    "configuration",
    "site",
    "static",
    "web"
  ],
  "license": "MIT",
  "main": "src",
  "repository": {
    "type": "git",
    "url": "git@github.com:raypatterson/sws-config.git"
  },
  "scripts": {
    "commit": "git-cz",
    "link": "linkr",
    "link:rm": "linkr remove && npm i",
    "lint": "xo --fix",
    "test": "npm run test:pass",
    "test:fail": "exit 1",
    "test:pass": "exit 0",
    "upgrade": "updtr && fixpack"
  },
  "xo": {
    "envs": [
      "node",
      "commonjs"
    ],
    "esnext": true,
    "space": false,
    "globals": [],
    "rules": {
      "padded-blocks": [
        1,
        "always"
      ]
    }
  }
}
